{
	"manifest_version": 2,

	"name": "Reaction Saver",
	"description": "A Chrome extension for saving reaction images and GIFs.",
	"version": "1.0",

	"background": {
		"scripts": ["ReactionSaver.js"],
		"persistent": false
	},

	"browser_action": {
		"default_popup": "InsertReaction.html"
	},

	"permissions": [
		"contextMenus",
		"storage",
		"tabs",
		"http://*/",
		"https://*/"
	],

	"icons": {
		"16": "icon-16.png"
	}
}
